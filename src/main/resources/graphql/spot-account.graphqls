schema {
    query: Query
    mutation: Mutation
}

type Query {
    getPost(id: String!): PostResponse
    getWriteDay : WriteDate
    getDayAndPostInfo(year:Int!, month:Int!): [PostResponse]
}

type Mutation {
    createAccount(req: AccountRequest!): TokenAndAccountResponse
    createPost(req: PostCreateRequest, isLive: Boolean!): Boolean
}