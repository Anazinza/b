schema {
    query: Query
    mutation: Mutation
}

type Query {
    post(id: String!): PostResponse
    writeDay : WriteDate
    posts(year:Int!, month:Int!): [PostResponse]
    account : AccountResponse
}

type Mutation {
    createAccount(req: AccountRequest!): TokenAndAccountResponse
    createPost(req: PostCreateRequest, isLive: Boolean!): Boolean
}